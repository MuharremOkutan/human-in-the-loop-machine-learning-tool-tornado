
<div class="ui container" style="background:whitesmoke;padding:20px;margin-top:10px;border-radius:5px;border-style:solid;border-color:gainsboro;border-width:1px">

  <h3 class="ui header">  <%= @dataset.name %></h3>

  <table width="100%">
    <tr>
      <td width="50%">
        <b>ID: </b><%= @dataset.es_id %>
        <br>
        <b>Type: </b><%= @dataset.data_type %>
        <br>
        <b>Owner: </b><%= User.find(@dataset.user_id).email %>
        <br>
        <b>Data Size: </b><%= @dataset.inputs_count %>
        <br>
        <b>Seed size: </b><%= @dataset.human_labels_count %>
        <br>
        <b>Description: </b>
        <% if @dataset.description!="" and @dataset.description!=nil%>
        <br>
        <%= @dataset.description %>
        <% else %>
          None
        <% end %>
      </td>
      <td style="text-align:right">
        <br>
        <br>
        <% if @dataset.status == "ready" %>
        <span style="color:green;background-color: lime;padding:3px;padding-right:6px;padding-left:6px;border-radius:2px;align-content: center;">
        <b><%= @dataset.status %></b>
        </span>
        <% else %>
        <span style="color:orangered;background-color: orange;padding:3px;padding-right:6px;padding-left:6px;border-radius:2px;align-content: center;">
        <b> <%= @dataset.status %>..</b>
                <% end %>

        </span>
      </td>
    </tr>
  </table>
</div>
